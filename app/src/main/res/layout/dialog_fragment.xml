<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="300dp"
    android:minHeight="400dp"
    tools:context="florida.com.waneat.Fragments.DialogFragment"
    android:id="@+id/dialog_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/colorSecondaryDarkWaneat">
            <TextView
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Total:"/>
            <TextView
                android:id="@+id/cestaTotal"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text=" 34,90€"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cestaRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>


        <Space
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <GridLayout
            android:id="@+id/layout_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="vertical"
            android:rowCount="2"
            android:visibility="visible">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_weight="1"
                android:text="Tarjeta de crédito:"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:visibility="visible" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_cards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6666 xxxx xxxx xxxx"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonIntroducirTarj"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="5dp"
                android:layout_rowSpan="2"
                android:layout_weight="3"
                android:background="@color/colorPrimaryDarkWaneat"
                android:padding="5dp"
                android:text="Introducir tarjeta"
                android:visibility="visible" />


        </GridLayout>

        <LinearLayout
            android:id="@+id/layout_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="La cesta está vacía"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:visibility="visible" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDarkWaneat"
            android:text="IR A PAGAR" />
    </LinearLayout>
</FrameLayout>
